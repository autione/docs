---
interface Props {
  label: string;
  href: string;
}
const { label } = Astro.props;
const { href } = Astro.props;
import { Icon } from "astro-icon/components";
---

<style lang="scss">
  .download-btn {
    background-color: var(--sl-color-accent-high);
    padding: 10px;
    padding-inline: 20px;
    border-radius: 25px;
    margin-block: 20px;
    display: inline-block;
    color: var(--sl-color-accent-low) !important;
    font-weight: 700;
    text-decoration: none;
    border: 1px solid var(--sl-color-white);
    box-shadow: var(--sl-shadow-md);
    &:hover {
      color: var(--sl-color-white) !important;
    }
    &:active {
      transform: translateY(2px);
      box-shadow: none;
    }
    svg {
      display: inline;
      margin-bottom: -11px;
      margin-right: 5px;
    }
  }
</style>

<a class="download-btn" href={href}
  ><Icon name="line-md:download-loop" size={30} />{label}</a
>
