---
interface Props {
  owner: string;
  repo: string;
  target: string;
}
const { owner } = Astro.props;
const { repo } = Astro.props;
const { target } = Astro.props;
---

<style>
  gh-card {
    background-color: #00000013;
    padding: 20px;
    border-radius: 10px;
    border: solid 1px #4d4d4d12;
    display: inline-block;
    min-width: 500px;
    #gh-repo-title-box {
      display: flex;
      align-items: center;
    }
    #gh-repo-title-box svg {
      margin-right: 5px;
      margin-bottom: -5px;
    }
  }
</style>
<script src="./github_fetch.ts"></script>
<gh-card owner={owner} repo={repo}>
  <div id="gh-repo-title-box">
    <svg
      aria-hidden="true"
      height="16"
      viewBox="0 0 16 16"
      version="1.1"
      width="16"
      data-view-component="true"
    >
      <path
        fill="#6b6b6b"
        d="M2 2.5A2.5 2.5 0 0 1 4.5 0h8.75a.75.75 0 0 1 .75.75v12.5a.75.75 0 0 1-.75.75h-2.5a.75.75 0 0 1 0-1.5h1.75v-2h-8a1 1 0 0 0-.714 1.7.75.75 0 1 1-1.072 1.05A2.495 2.495 0 0 1 2 11.5Zm10.5-1h-8a1 1 0 0 0-1 1v6.708A2.486 2.486 0 0 1 4.5 9h8ZM5 12.25a.25.25 0 0 1 .25-.25h3.5a.25.25 0 0 1 .25.25v3.25a.25.25 0 0 1-.4.2l-1.45-1.087a.249.249 0 0 0-.3 0L5.4 15.7a.25.25 0 0 1-.4-.2Z"
      ></path>
    </svg>
    <a
      href={"https://github.com/" + owner + "/" + repo}
      target={target == "" ? target : "_bank"}
    >
      {repo}
    </a>
  </div>
  <span id="gh_stars">0</span>
  <span id="gh_forks">0</span>
</gh-card>
